# Teachers Club Environment Configuration

# Application Settings
VITE_APP_NAME="Teachers Club"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# Institution Configuration
VITE_INSTITUTION_NAME="Your Educational Institution"
VITE_INSTITUTION_DOMAIN="your-domain.edu"
VITE_ADMIN_EMAIL="admin@your-domain.edu"

# Database Configuration (Supabase)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Feature Configuration
VITE_ENABLE_REGISTRATION=true
VITE_REQUIRE_INVITE_CODE=true
VITE_ENABLE_ANONYMOUS_CONFESSIONS=true

# Development Configuration (only for development)
VITE_ENABLE_DEBUG=false
VITE_SHOW_DEV_TOOLS=false
VITE_DEV_MODE=false
VITE_SHOW_DEMO_INFO=false

# Production Security (set to true for production)
VITE_STRICT_MODE=false
VITE_CONTENT_SECURITY_POLICY=false
